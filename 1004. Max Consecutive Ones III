// Amazon Facebook Microsoft Yandex

// Sliding Window

public class Solution {
    public int LongestOnes(int[] nums, int k) {
        int n = nums.Length;
        int left = 0;
        int maxOnes = 0;
        // Count of zeros flipped in the current window
        int flipped = 0;
        
        // Expand the window by moving 'right'
        for(int right = 0; right < n; right++) {
            if(nums[right] == 0)
                flipped++;            // Count this zero as flipped
            
            // If flipped zeros exceed k, shrink window from the left
            while(flipped > k) {
                if(nums[left] == 0)
                    flipped--;        // Remove a flipped zero from the count
                left++;               // Move left pointer forward
            }
            
            // Update maximum window length (valid subarray size)
            maxOnes = Math.Max(maxOnes, right - left + 1);
        }
        return maxOnes;
    }
}
