// Kadane's Algorithm
// For each element decide whether to continue the existing subarray or create a new sub array

public class Solution {
    public int MaxSubArray(int[] nums) {
        // Kadane's Algorithm
        int maxSumEnding = nums[0];
        int maxSum = nums[0]; 

        for(int i = 1; i < nums.Length; i++)
        {
            maxSumEnding = Math.Max(maxSumEnding + nums[i], nums[i]);
            if(maxSumEnding > maxSum)
                maxSum = maxSumEnding;
        }
        return maxSum; 
    }
}
