1st Approach
-------------

using System.Text.RegularExpressions;
public class Solution {
    public bool IsPalindrome(string s) {
        s = Regex.Replace(s, "[^a-zA-Z0-9]", ""); // Replace non-alphanumeric characters with empty, i.e. remove them
        s = s.ToLower();
        
        int low = 0, high = s.Length - 1;
        while(low < high)
        {
            if(s[low] != s[high])
                return false;
            low++;
            high--;
            
        }
        return true;;
    }
}

2nd Approach without modifying the actual string
-------------------------------------------------

public class Solution {
    public bool IsPalindrome(string s) {
        int left = 0;
        int right = s.Length - 1;

        while(left < right)
        {
            // Skip non-alphanumeric characters
            while (left < right && !IsLetterOrDigit(s[left]))
                left++;
            while (left < right && !IsLetterOrDigit(s[right]))
                right--;

            // Compare characters after converting to lower (case-insensitive)
            if (Char.ToLower(s[left]) != Char.ToLower(s[right]))
                return false;

            left++;
            right--;

        }        
        return true;
    }

    private bool IsLetterOrDigit(char ch)
    {
        return (ch >= 'A' && ch <= 'Z') 
        || (ch >= 'a' && ch <= 'z') 
        ||  (ch >= 48 && ch <= 57);
    }
}
