public class Solution {
    public int[] FindErrorNums(int[] nums) {
        int n = nums.Length;
        int[] aux = new int[n];
        
        int repeat = 0, missing = 0;
        foreach(int num in nums)
            aux[num - 1]++;
        
        for(int i = 0; i < n; i++)
        {
            if(aux[i] > 1)
                repeat = i + 1;
            else if(aux[i] == 0)
                missing = i + 1;
        }
        return new int[]{repeat, missing};
    }
}
