// Prefix Sum + Hashmap

// Adobe Amazon Apple Bloomberg eBay Expedia Facebook Goldman Sachs Google Indeed LinkedIn Microsoft Oracle Quora Snapchat Twilio Uber Wish


Basic Approach
---------------

ublic class Solution {
    public int SubarraySum(int[] nums, int k) {
        int n = nums.Length;
        int count = 0;
        for(int i = 0; i < n; i++)
        {
            int sum = 0;
            for(int j = i; j < n; j++)
            {
                sum = sum + nums[j];
                if(sum == k)
                    count++;
            }
        }
        return count;
    }
}

Efficient Approach
-------------------

public class Solution {
    public int SubarraySum(int[] nums, int k) {
        int n = nums.Length; 
        int prefixSum = 0, count = 0;

        // Dictionary to store prefix sum count
        Dictionary<int,int> prefixSumCount = new Dictionary<int,int>();
        for(int i = 0; i < n; i++)
        {
            prefixSum = prefixSum + nums[i]; 
            if(prefixSum == k)
                count++;
            if(prefixSumCount.ContainsKey(prefixSum - k)) 
                count = count + prefixSumCount[prefixSum - k]; 
             
            if(prefixSumCount.ContainsKey(prefixSum)) 
                prefixSumCount[prefixSum]++;
            else
                prefixSumCount.Add(prefixSum, 1);
            
        }
        return count;
    }
}

