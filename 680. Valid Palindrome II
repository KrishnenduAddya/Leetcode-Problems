// Microsoft Morgan Stanley PhonePe

// Two Pointer

public class Solution {
    public bool ValidPalindrome(string s) {
        int left = 0, right = s.Length - 1;

        // If there is any mismatch then try skipping character either from left or right
        while(left < right)
        {
            if(s[left] != s[right])
                return IsPalindrome(s, left + 1, right) || IsPalindrome(s, left, right - 1);
            left++;
            right--;
        }
        return true;
    }

    private bool IsPalindrome(string s, int left, int right)
    {
        while(left < right)
        {
            if(s[left] != s[right])
                return false;
            left++;
            right--;
        }
        return true;
    }
}
