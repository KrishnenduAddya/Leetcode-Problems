// Amazon Expedia Twilio Yandex

public class Solution {
    public int SubarraysDivByK(int[] nums, int k) {
        int n = nums.Length;
        int count = 0;
        int prefixSum = 0;
        
        // Map stores remainder frequencies
        Dictionary<int, int> map = new Dictionary<int,int>(5);
        map.Add(0,1);           // Initialize with remainder 0 â†’ one occurrence
        
        for(int i = 0; i < n; i++)
        {
            prefixSum = prefixSum + nums[i];

            // Compute remainder of prefix sum
            int rem = prefixSum % k;
            if(rem < 0)         // Handle negative remainders
                rem = rem + k;
            
            // Remainder repeat means the same remainder appeared before and now the subarray is divisible by k
            if(map.ContainsKey(rem))
            {
                count = count + map[rem]; 
                map[rem]++;
            }
            else
                map.Add(rem, 1);
        }
        return count;
    }
}
