// Amazon Google Goldman Sachs

// Core Idea : Call the the search function with a flag isFirst
// When you are trying find first position of the target, when target found, store that index and keep searching left
// When you are trying find last position of the target, when target found, store that index and keep searching right

public class Solution {
    public int[] SearchRange(int[] nums, int target) {
        int[] result = new int[2] {-1, -1};
        
        result[0] = Search(nums, target, true);
        if (result[0] == -1) return result; // Target not found
        result[1] = Search(nums, target, false);
        return result;
    }
    public int Search(int[] nums, int target, bool isFirst)
    {
        int index = -1;
        int low = 0;
        int high = nums.Length - 1;
        while(low <= high)
        {
            int mid = (low + high) / 2;
            if(nums[mid] == target)
            {
                index = mid;
                if(isFirst)
                    high = mid - 1; // Need to find first position of the target, so keep searching left

                else
                    low = mid + 1; // // Need to find last position of the target, so keep searching right
            }
            else if(target < nums[mid])
                high = mid - 1;
            else
                low = mid + 1;
        }
        return index;
    }
}
