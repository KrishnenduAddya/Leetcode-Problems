// Amazon Adobe Google Flipkart Microsoft Snapdeal

// Binary Search

public class Solution {
    public int Search(int[] nums, int target) {
        int left = 0;
        int right = nums.Length - 1;

        while(left <= right)
        {
            int mid = left + (right - left) / 2;
            if(nums[mid] == target)
                return mid;
            
            // Determine which half is sorted
            // Left half is sorted
            if(nums[left] <= nums[mid])
            {
                // If target lies within the sorted left half
                if(target >= nums[left]  && target < nums[mid])
                    right = mid - 1; // Search in sorted left half
                else
                    left = mid + 1;
            }
            // Right half is sorted
            else
            {
                // If target lies within the sorted right half
                if(target > nums[mid]  && target <= nums[right])
                    left = mid + 1; // Search in sorted right half
                else
                    right = mid - 1;
            }
        }

        // Not found
        return -1;
    }
}
