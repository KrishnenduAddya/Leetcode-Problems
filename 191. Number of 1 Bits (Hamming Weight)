// Amazon Sumo Logic Paytm

// Bit Manipulation

1st Approach
--------------
// Shift each bit to right most bit and perform bitwise and operation with 1
public class Solution {
    public int HammingWeight(int n) {
        // Count to store the set bits
        int count = 0;
        
        while (n > 0) {
            int currBit = n & 1;  // Extract last bit
            if (currBit == 1) {
                count++;
            }
            n >>= 1; // Shift right
        }
        return count;
    }
}


2nd Approach
--------------

// Brian Karnighan's Algorithm
// Change the first set bit from right to 0
public class Solution {
    public int HammingWeight(uint n) {
        int ans = 0;
        while(n != 0)
        {
            n = n & (n - 1);
            ans = ans + 1;
        }
    	  return ans;
    }
}
